---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

// Load all projects
const projects = await getCollection("projects");

// Explicit featured list (intentional, not automatic)
const FEATURED_SLUGS = [
  "aws-caas-platform",
  "secure-network-migrations-aws",
  "tsna-automation-reporting",
];

// Split projects
const featured = FEATURED_SLUGS
  .map((slug) => projects.find((p) => p.slug === slug))
  .filter(Boolean);

  const rest = projects
  .filter((p) => !FEATURED_SLUGS.includes(p.slug))
  .sort((a, b) => b.data.date - a.data.date);

// Optional: sort non-featured by date
rest.sort((a, b) => b.data.date - a.data.date);
---

<BaseLayout
  title="Projects — Myan Patel"
  description="Selected projects across cloud infrastructure, automation, and platform engineering."
>
  <!-- Intro -->
  <header class="max-w-3xl">
    <h1 class="text-3xl font-semibold tracking-tight sm:text-4xl">
      Projects
    </h1>
    <p class="mt-3 text-slate-300 sm:text-lg">
      A selection of cloud, automation, and platform-focused projects.
      Each project documents the problem, approach, and outcomes.
    </p>
  </header>

  <!-- Featured -->
  <section class="mt-12">
    <h2 class="text-lg font-semibold tracking-tight">
      Featured projects
    </h2>
    <p class="mt-2 max-w-2xl text-sm text-slate-400">
      Projects that best represent the type of work I focus on: cloud
      infrastructure, automation, and platform reliability.
    </p>

    <div class="mt-6 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {featured.map((p) => (
            <a
              href={`/projects/${p.slug}`}
              class="card flex h-full flex-col p-6"
            >
              <!-- Badge -->
              <span class="inline-flex w-fit rounded-full bg-emerald-400/10 px-3 py-1 text-xs text-emerald-200 ring-1 ring-emerald-400/20">
                Featured
              </span>
          
              <!-- Title -->
              <h3 class="mt-3 font-semibold">
                {p.data.title}
              </h3>
          
              <!-- Summary -->
              <p class="mt-2 text-sm text-slate-300">
                {p.data.summary}
              </p>
          
              <!-- Tags -->
              <div class="mt-4 flex flex-wrap gap-2">
                {p.data.stack?.slice(0, 4).map((tag) => (
                  <span class="rounded-full bg-white/5 px-2.5 py-1 text-xs text-slate-200 ring-1 ring-white/10">
                    {tag}
                  </span>
                ))}
              </div>
          
              <!-- CTA pinned to bottom -->
              <div class="mt-auto pt-4 text-sm font-medium text-white">
                View project →
              </div>
            </a>
          ))}        
    </div>
  </section>

  <!-- All projects -->
  <section class="mt-16">
    <h2 class="text-lg font-semibold tracking-tight">
      All projects
    </h2>
    <p class="mt-2 max-w-2xl text-sm text-slate-400">
      Additional projects and labs that support my broader experience.
    </p>

      <div class="mt-6 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {rest.map((p) => (
        <a
          href={`/projects/${p.slug}`}
          class="card flex h-full flex-col p-5 opacity-90 hover:opacity-100"
        >
          <h3 class="font-medium">
            {p.data.title}
          </h3>
      
          <p class="mt-1 text-sm text-slate-400">
            {p.data.summary}
          </p>
      
          <div class="mt-auto pt-4 text-sm font-medium text-white">
            View project →
          </div>
        </a>
      ))}      
    </div>
  </section>
</BaseLayout>
